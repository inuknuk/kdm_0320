<!--
    Ce fichier est celui qui crée la table des matières
    Pour le moment le fichier en question est sous-ligné
    Les thèmes sont en gras
-->
<div class="w3-container">
    <div class="w3-col w3-container m6 l4">
        <ul class="w3-ul w3-hoverable">
            <% for(const theme of allContent.themes) { %>
            <li><b><%= theme.title %></b>
            </li>
            <% for (const lesson of allContent.lessons) {
            let path = rootPath
             + "/"
             + lesson.title.replace(':', '').replace('/', '') 
             + "/"
             + lesson.id.substring(lesson.id.length - 2, lesson.id.length) 
             + ".html";
             path = path.split(' ').join('%20');
            if (currentLesson == lesson && lesson.theme === theme.id) { %>
            <li><u><%= lesson.title %></u>
            </li>
            <% } else if (lesson.theme === theme.id) { %>
            <li><a href=<%= path %>><%= lesson.title %></a></li>
            <% }
        }
    } %>
        </ul>
    </div>
</div>