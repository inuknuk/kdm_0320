<!DOCTYPE html>
<html lang="">

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title><%= currentLesson.title %></title>
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
</head>

<body>
    <%- include("components/navbar") %>
    <div class="w3-container">
        <div class="w3-col w3-container s6 m4 l3">
            <%- include("components/lessonMenu") %>
        </div>
        <div class="w3-col w3-container s6 m8 l9">
            <% for(const theme of subjectContent.themes) { 
                if ( theme.id == currentLesson.theme) { %>
            <a href=<%= pathTransformer(indexPath) %>>
                Accueil
            </a>
            &rarr;
            <% 
            const subjectPath = pathTransformer(subjectPathCreator(subjectContent, "0", rootPath));
            %>
            <a href=<%= subjectPath %>>
                <%= subjectContent.title %>
            </a>
            &rarr; <%= theme.title %>
            <% 
            } 
            } 
            %>
            <%- include("components/questionContent") %>
        </div>
    </div>
</body>
<script src="../../../templates/questionOnClick.js"></script>

</html>